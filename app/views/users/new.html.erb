<%=form_tag("/users", method: :post) do %>
  <%= label_tag("Name") %>
  <%= text_field_tag(:name, "#{session[:user_info]['name'] if session[:user_info]}") %><br>
  <%= label_tag("Street Address") %>
  <%= text_field_tag(:address, "#{session[:user_info]['address'] if session[:user_info]}") %><br>
  <%= label_tag("City") %>
  <%= text_field_tag(:city, "#{session[:user_info]['city'] if session[:user_info]}") %><br>
  <%= label_tag("State") %>
  <%= text_field_tag(:state, "#{session[:user_info]['state'] if session[:user_info]}") %><br>
  <%= label_tag("Zipcode") %>
  <%= text_field_tag(:zip, "#{session[:user_info]['zip'] if session[:user_info]}") %><br>
  <%= label_tag("Email Address") %>
  <%= text_field_tag(:email) %><br>
  <%= label_tag("Password") %>
  <%= password_field_tag(:password) %><br>
  <%= label_tag("Password Confirmation") %>
  <%= password_field_tag(:password_confirmation) %><br>
  <%= submit_tag "Register" %>
<%end%>
